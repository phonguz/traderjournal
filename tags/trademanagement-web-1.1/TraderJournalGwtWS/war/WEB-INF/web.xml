<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<!-- TODO: Add <servlet> tags for each servlet here. -->
	<!-- TODO: Add <servlet-mapping> tags for each <servlet> here. -->
	 <!-- Servlets -->
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>TraderJournalGWT.html</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>AccountService</servlet-name>
  	<servlet-class>org.traderjournal.server.svc.AccountServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AccountService</servlet-name>
  	<url-pattern>/traderjournalgwt/AccountService</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>TradeService</servlet-name>
  	<servlet-class>org.traderjournal.server.svc.TradeServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>TradeService</servlet-name>
  	<url-pattern>/traderjournalgwt/TradeService</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>InstrumentService</servlet-name>
  	<servlet-class>org.traderjournal.server.svc.InstrumentServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>InstrumentService</servlet-name>
  	<url-pattern>/traderjournalgwt/InstrumentService</url-pattern>
  </servlet-mapping>
	<!-- TODO: Optionally add a <welcome-file-list> tag to display a welcome file. -->
	
	
	
</web-app>
