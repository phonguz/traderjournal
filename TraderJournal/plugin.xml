<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="traderjournal.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="TradePerspective"
            class="traderjournal.Perspective"
            id="TraderJournal.tradePerspective">
      </perspective>
      <perspective
            class="traderjournal.AccountPerspective"
            id="TraderJournal.AccountPerspective"
            name="AccountPerspective">
      </perspective>
      <perspective
            class="traderjournal.ReportPerspective"
            id="TraderJournal.ReportPerspective"
            name="ReportPerspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="PerspectivesActionSet"
            id="TraderJournall.actionSetPerspectives"
            label="PerspectivesActionSet"
            visible="true">
         <menu
               id="perspectivesMenu"
               label="Perspectives">
            <separator
                  name="perspectives">
            </separator>
         </menu>
         <action
               class="traderjournal.actions.OpenAccountPerspectiveAction"
               id="TraderJournal.openAccountPerspectiveAction"
               label="AccountPerspective"
               menubarPath="perspectivesMenu/perspectives">
         </action>
         <action
               class="traderjournal.actions.OpenTradePerspectiveAction"
               id="TraderJournal.openTradePerspectiveAction"
               label="TradePerspective"
               menubarPath="perspectivesMenu/perspectives">
         </action>
         <action
               class="traderjournal.actions.OpenReportPerspectiveAction"
               id="TraderJournal.openReportPerspective"
               label="ReportPerspective"
               menubarPath="perspectivesMenu/perspectives">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="TraderJournal"
            name="TraderJournal Category">
      </category>
      <view
            category="TradeTrack"
            class="traderjournal.views.TradeListView"
            icon="icons/hierarchical.gif"
            id="traderjournal.views.TradeListView"
            name="Trade List View">
      </view>
      <view
            category="TradeTrack"
            class="traderjournal.views.ImageViewPart"
            icon="icons/binary.gif"
            id="traderjournal.views.ImageViewPart"
            name="ImageViewPart">
      </view>
      <view
            category="TradeTrack"
            class="traderjournal.views.TradeDetailView"
            icon="icons/flat.gif"
            id="traderjournal.views.TradeDetailView"
            name="TradeDetailView">
      </view>
      <view
            allowMultiple="false"
            category="TradeTrack"
            class="traderjournal.views.AccountListView"
            icon="icons/hierarchical.gif"
            id="traderjournal.views.AccountListView"
            name="AccountListView">
      </view>
      <view
            allowMultiple="false"
            class="traderjournal.views.ReportView"
            icon="icons/validate.gif"
            id="traderjournal.views.ReportView"
            name="ReportView">
      </view>
      <view
            allowMultiple="false"
            class="traderjournal.views.TradeReportListView"
            icon="icons/hierarchical.gif"
            id="traderjournal.views.TradeReportListView"
            name="TradeReportListView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="traderjournal.views.AccountListView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"
               showTitle="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="traderjournal.editors.TradeEditor"
            default="false"
            icon="icons/properties.gif"
            id="traderjournal.editors.TradeEditor"
            name="TradeEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="traderjournal.preferences.DatabasePreferencePage"
            id="traderjournal.preferences.DatabasePreferencePage"
            name="Database Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="traderjournal.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="TraderJournal.application"
            name="TraderJournal">
         <property
               name="appName"
               value="TraderJournal">
         </property>
         <property
               name="windowImages"
               value="icons/bookmark.gif">
         </property>
      </product>
   </extension>

</plugin>
